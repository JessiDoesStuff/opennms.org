{% embed 'partials/base_module.html.twig' %}
    {% set section_class = "contacts" %}

    {% block module_content %}
        {% set container_class = elements.container.class %}
        {% set information = elements.information %}
        {% set information_column = information.column|default(3) %}
        {% set information_column_class = information.class %}
        {% set form = elements.form %}
        {% set form_column = form.column|default(9) %}
        {% set form_position = form.position %}
        {% set form_column_class = form.class %}
        <div class="row contacts-text {{ container_class }}">
            {% if (form_position|default('right') == 'right') %}
            <div class="col-md-{{ information_column }} {{ information_column_class }}">
                {% block info %}
                {{ page_sections["info"] }}
                {% endblock %}
            </div>
            <div class="col-md-{{ form_column }} {{ form_column_class }}">
                {% block form %}
                {{ page_sections["pre_form"] }}
                {{ simple_form(page.header.simple_form) }}
                {{ page_sections["post_form"] }}
                {% endblock %}
            </div>
            {% else %}
            <div class="col-md-{{ form_column }} {{ form_column_class }}">
                {{ block('form') }}
            </div>
            <div class="col-md-{{ information_column }} {{ information_column_class }}">
                {{ block('info') }}
            </div>
            {% endif %}
        </div>
    {% endblock %}
{% endembed %}

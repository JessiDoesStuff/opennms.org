<div class="panel panel-default">
  <div class="panel-heading" role="tab" id="{{ heading_id }}">
    <h4 class="panel-title">
      <a role="button" data-toggle="collapse" data-parent="#{{ parent_id }}" href="#{{ id }}" aria-expanded="true" aria-controls="{{ id }}">
        {{ title }}
      </a>
    </h4>
  </div>
  <div id="{{ id }}" class="panel-collapse collapse {% if is_first %} in{% endif %}" role="tabpanel" aria-labelledby="{{ heading_id }}">
    <div class="panel-body">
      {{ content }}
    </div>
  </div>
</div>